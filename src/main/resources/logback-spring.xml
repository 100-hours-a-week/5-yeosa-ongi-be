<configuration>

  <appender name="QUERY-FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>logs/query.log</file> <!-- 로그 저장 위치 -->
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger - %msg%n</pattern>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>logs/query.%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>7</maxHistory>
    </rollingPolicy>
  </appender>

  <logger name="com.p6spy" level="DEBUG" additivity="false">
    <appender-ref ref="CONSOLE" />
  </logger>

  <root level="INFO">
    <!-- 기존 로그 출력이 있으면 여기에 추가 -->
  </root>

</configuration>
